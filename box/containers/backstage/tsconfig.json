{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "references": [
    { "path": "packages/app" },
    { "path": "packages/backend" },
    { "path": "plugins/openapi-registry" },
    { "path": "plugins/openapi-registry-backend" }
  ],
  "files": []
}
